#include <iostream>
using namespace std;

class Calculator {
public:
    int add(int a, int b) {
        return a + b;
    }

    double add(double a, double b) {
        return a + b;
    }

    int add(int a, int b, int c) {
        return a + b + c;
    }
};

int main() {
    Calculator calc;

    cout << "Sum of two integers (5 + 10): "
         << calc.add(5, 10) << endl;

    cout << "Sum of two doubles (5.5 + 2.3): "
         << calc.add(5.5, 2.3) << endl;

    cout << "Sum of three integers (2 + 4 + 6): "
         << calc.add(2, 4, 6) << endl;

    return 0;
}
